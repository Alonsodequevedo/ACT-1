#include <stdio.h>

void imprimirLinea(int longitud) {
    int hojas = 1;

    while (hojas <= longitud) {
        printf("\033[1;32m*Â°\033[0m");
        hojas++;
    }
    printf("\n");
}


int main() {

	while(1==1){
		
	int back = 90;
	int back2 = 60;
	int espacio = 1;
    int numeroLineas;
    int contador = 1;
    int contador2 = 1;
	int hojas = 1;
	
    printf("\033[1;34mIngrese el numero de niveles para el arbol:\033[0m");
    scanf("%d", &numeroLineas);
    

    if (numeroLineas == 0) {
		printf("El valor debe de ser mayo a 0\n");
    } 
	else if(numeroLineas > 0) {
        while (contador <= numeroLineas) {
        	
        	espacio = 0;
        	
        	while (espacio <= back) {
        		printf(" ");
        		espacio++;
    		}
    		
   		 	if(1==1){
    
    			back = back - 1;
    		}
    		
            imprimirLinea(contador);
            contador++;
        }
    }
    
    else if(numeroLineas < 0) {
    	
    	numeroLineas = numeroLineas*-1;
    	contador2 = numeroLineas;
    	
        while (contador <= numeroLineas) {
        	espacio = 0;
        	while (espacio <= back2) {
        		printf(" ");
        		espacio++;
       			
    		}
   		 	if(1==1){
    
    			back2 = back2 + 1;
    		}
    		
            imprimirLinea(contador2);
            contador++;
            contador2 = contador2 - 1;
        }
        
	}
	
	
    
	}
 

    return 0;
}
